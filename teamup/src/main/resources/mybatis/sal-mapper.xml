<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="sal">
    
    	<insert id="add">
    		insert into sal(emp_no, sal_annual)
    		values(#{empNo}, #{salAnnual} )
    	</insert>
    	
    	<select id="list" resultType="SalDto">
    		select * from sal order by emp_no asc
    	</select>
    	
    	<select id="find" resultType="SalDto">
    		select * from sal where emp_no = #{emp_no}
    	</select>
    	
    </mapper>