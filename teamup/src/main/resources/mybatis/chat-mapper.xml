<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
	<mapper namespace="chat">
		<select id="sequence" resultType="int">
			select chat_room_seq.nextval from dual
		</select>
	
	
		<insert id="addChat">
			insert into chat_room(chat_room_no) values(#{chatRoomNo})
		</insert>
		<insert id="addMember"  parameterType="java.util.List">
			insert into chat_group(chat_member,chat_room_no) values(#{chatMember},#{ChatRoomNo})
		</insert>
	</mapper>